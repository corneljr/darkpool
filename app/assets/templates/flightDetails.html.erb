<ion-view title="Flight Details" id="page5">
    <ion-content padding="false" class="has-header">
        <div class='{{flightType}}_tier_header'>
            <h2>{{tierDetails['title']}}</h2>
            <h4>{{tierDetails['description']}}</h4>
        </div>

        <ion-list>
            <ion-item>
                <div class='row'>
                    <div class='col'>
                        <p>Departing</p>
                    </div>
                    <div class='col'>
                        <p>Return</p>
                    </div>
                </div>
                <div class='row'>
                    <div class='col'>
                        <p>{{tripDetails.departureDate | date:'MMM d, yyyy'}}</p>
                    </div>
                    <div class='col'>
                        <p>{{tripDetails.returnDate | date:'MMM d, yyyy'}}</p>
                    </div>
                </div>
            </ion-item>
            <ion-item>
                <div class='row'>
                    <div class='col'>
                        <p>Price</p>
                    </div>
                    <div class='col'>
                        <p>{{flightDetails[flightType]['tierPrice'] | currency:"$":0}}</p>
                        <p><strike style='color:red;'>{{flightDetails[tier.type]['currentPrice'] | currency:"$":0}}</strike>&nbsp;Save {{flightDetails[tier.type]['currentPrice'] - flightDetails[tier.type]['tierPrice'] | currency:"$":0}}</p>
                    </div>
                </div>
            </ion-item>
            <ion-item>
                <div class='row'>
                    <div class='col'>
                        <p>Number of Stops</p>
                    </div>
                </div>
            </ion-item>
        </ion-list>

            <h4>{{flightDetails.origin}} to {{flightDetails.destination}}</h4>
            <h5>Roundtrip</h5>

        <div style='padding:10px;'>
            <h4>Flight Details</h4>
            <h5>Departure Time</h5>
            <h5>Potential Airlines</h5>
            <img height='30' width='auto' src={{airline}} ng-repeat="airline in flightDetails[flightType]['airlines']" style='margin-right:10px;'>
            <h5>Further Details</h5>
            <p>Your flight will be finalized at least one month before departure. It is 100% guarenteed and fully refundable.</p>
        </div>
        <div style='height:127px;'></div>
    </ion-content>
    <div class='fixed-to-bottom'>
        <div class="info-container">
            <div class="row" style='padding-bottom:0;'>
                <div class="col">
                    <p>Roundtrip, Per Person</p>
                </div>
                <div class="col">
                    <h4 class="align-right">{{flightList.tierPrice | currency:"$":0}}</h4>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="discount align-right">
                        <strike style='color:red;'>{{flightList.currentPrice | currency:"$":0}}</strike>&nbsp;Save {{flightList.currentPrice - flightList.tierPrice | currency:"$":0}}</p>
                </div>
            </div>
        </div>
        <button ng-click="bookNow()" style="border-radius:0px 0px 0px 0px;" class="button button-positive button-block">Book Now</button>
    </div>
    <script id="howItWorks.html" type="text/ng-template">
        <ion-modal-view>
            <ion-header-bar>
                <i style='font-size:20px;padding:5px;' ng-click="modal.hide()" class='ion-close'></i>
            </ion-header-bar>
                <ion-content>
                    <ion-slide-box on-slide-changed="slideChanged(index)">
                        <ion-slide>
                            <img src="<%= image_url('TimeTravelDark.jpg') %>" width="100%" height="auto" style="display: block; margin-left: auto; margin-right: auto;">
                            <div class='warp-info align-center'>
                                <h3>No more waiting for prices to drop!</h3><br>
                                <p>We're confident in our predictions. Buy your flights now at Hopper's predicted future price and we'll complete the booking when the price drops.</p><br>
                                <p>You won't find these prices anywhere else!</p>
                            </div>
                        </ion-slide>
                        <ion-slide>
                            <img src="<%= image_url('BunnyTrip.jpg') %>" width="100%" height="auto" style="display: block; margin-left: auto; margin-right: auto;">
                            <div class='warp-info align-center'>
                                <h3>Pack your bags.</h3><br>
                                <p>We will finalize your flight and send over full travel details at least one month before departure. But don't worry, your price and travel dates are fully guaranteed.</p><br>
                                <p>Your flight is also fully refundable!</p>
                            </div>
                        </ion-slide>
                        <ion-slide>
                            <img src="<%= image_url('TravelAgency.jpg') %>" width="100%" height="auto" style="display: block; margin-left: auto; margin-right: auto;">
                            <div class='warp-info align-center'>
                                <h3>We're here to help.</h3><br>
                                <p>Feel free to reach out to us with any questions. Email our timewarp specialist at josh@hopper.com.</p><br>
                            </div>
                        </ion-slide>
                    </ion-slide-box>
                </ion-content>
          </ion-modal-view>
    </script>
</ion-view>